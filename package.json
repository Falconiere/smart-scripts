{
  "name": "smart-scripts",
  "version": "1.0.0",
  "description": "AI-powered git workflow tools - commit messages, push workflows, squash, and rebase",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "bin": {
    "sg": "./bin/sg.ts"
  },
  "files": [
    "bin",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run ./bin/sg.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint --deny-warnings",
    "lint:fix": "oxlint --fix",
    "check": "bun run typecheck && bun run lint",
    "prepare": "bun run check"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1",
    "yargs": "^17.7.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "oxlint": "^1.31.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "git",
    "cli",
    "ai",
    "commit",
    "developer-tools",
    "automation",
    "openrouter"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  }
}
